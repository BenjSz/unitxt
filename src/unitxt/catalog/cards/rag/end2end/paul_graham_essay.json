{
    "type": "task_card",
    "loader": {
        "type": "load_hf",
        "path": "/Users/yotamp/repos/fm-eval/data/rag/paul_graham_essay",
        "data_files": {
            "test": "test.jsonl"
        }
    },
    "preprocess_steps": [
        {
            "type": "split_random_mix",
            "mix": {
                "train": "test[50%]",
                "test": "test[50%]"
            }
        },
        {
            "type": "copy_fields",
            "field_to_field": [
                [
                    "answers",
                    "reference_answers"
                ],
                [
                    "is_answerable",
                    "is_answerable_label"
                ]
            ],
            "use_query": true
        }
    ],
    "task": {
        "type": "form_task",
        "inputs": [
            "question",
            "contexts",
            "documents"
        ],
        "outputs": [
            "reference_answers",
            "is_answerable_label"
        ],
        "metrics": [
            "metrics.rag.llama_index_correctness"
        ]
    },
    "templates": {
        "empty": {
            "type": "multi_reference_template",
            "input_format": "",
            "output_format": "{reference_answers}",
            "references_field": "reference_answers"
        }
    }
}
