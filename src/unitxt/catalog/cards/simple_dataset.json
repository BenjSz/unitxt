{
    "__type__": "task_card",
    "loader": {
        "__type__": "load_csv",
        "sep": ",",
        "files": {
            "test": "/Users/shir/Downloads/simple_dataset.csv"
        }
    },
    "preprocess_steps": [
        {
            "__type__": "split_random_mix",
            "mix": {
                "train": "test[35%]",
                "validation": "test[10%]",
                "test": "test[55%]"
            }
        },
        {
            "__type__": "set",
            "fields": {
                "context_type": "table"
            }
        },
        {
            "__type__": "literal_eval",
            "field": "table"
        },
        {
            "__type__": "literal_eval",
            "field": "answers"
        },
        {
            "__type__": "serialize_table_as_indexed_row_major",
            "field_to_field": [
                [
                    "table",
                    "context"
                ]
            ]
        }
    ],
    "task": "tasks.qa.with_context.extractive[metrics=[metrics.f1_strings, metrics.unsorted_list_exact_match]]",
    "templates": {
        "__type__": "templates_list",
        "items": [
            {
                "__type__": "multi_reference_template",
                "input_format": "Based on this {context_type}: {context}\nAnswer the question strictly in this format: '[[answer]]', for example: 'Answer: [[5]]'. \nQuestion: {question} \nAnswer:",
                "references_field": "answers",
                "output_format": "[[{answers}]]",
                "postprocessors": [
                    "processors.str_to_float_format",
                    "processors.lower_case"
                ]
            }
        ]
    }
}
