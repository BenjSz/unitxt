{
    "type": "metric_pipeline",
    "main_score": "score",
    "preprocess_steps": [
        {
            "type": "copy_fields",
            "field_to_field": [
                [
                    "ground_truths",
                    "references"
                ]
            ],
            "use_query": true
        },
        {
            "type": "copy_fields",
            "field_to_field": [
                [
                    "answer",
                    "prediction"
                ]
            ],
            "use_query": true
        }
    ],
    "metric": "metrics.bert_score.deberta_xlarge_mnli",
    "postpreprocess_steps": [
        {
            "type": "copy_fields",
            "field_to_field": [
                [
                    "score/global/recall",
                    "score/global/score"
                ]
            ],
            "use_query": true
        }
    ]
}
